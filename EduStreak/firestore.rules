rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // A user can create their OWN document if it doesn't exist yet.
      allow create: if request.auth != null && request.auth.uid == userId && !exists(/databases/$(database)/documents/users/$(userId));
      
      // Authenticated users can read any user document.
      // This allows for fetching displayNames for search, friend profiles, and leaderboard data.
      // If you add more sensitive private data to user docs later,
      // you might refine this or use a separate 'publicProfiles' collection.
      allow read: if request.auth != null;
      
      // A user can update or delete their OWN document.
      allow update, delete: if request.auth != null && request.auth.uid == userId;

      // Subcollection rules for habits and dailyCompletions can remain the same,
      // as they correctly scope access to the owner of the parent user document.
      match /habits/{habitId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;

        match /dailyCompletions/{completionId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
      }
      
      // Rules for in-app notifications subcollection
      match /inAppNotifications/{notificationId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow create: if request.auth != null && request.auth.uid == userId &&
                        request.resource.data.message is string &&
                        request.resource.data.timestamp is string && // Or a Firebase server timestamp
                        request.resource.data.read == false &&
                        (request.resource.data.type is string || !request.resource.data.keys().hasAny(['type'])) && // type is optional
                        (request.resource.data.relatedHabitId is string || !request.resource.data.keys().hasAny(['relatedHabitId'])); // relatedHabitId is optional
        allow update: if request.auth != null && request.auth.uid == userId &&
                        request.resource.data.read == true && // Only allow marking as read
                        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['read']);
        allow delete: if request.auth != null && request.auth.uid == userId; // Optional: allow users to delete their notifications
      }
    }
  }
}